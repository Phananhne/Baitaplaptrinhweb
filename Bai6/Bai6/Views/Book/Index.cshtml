@model IEnumerable<Bai6.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default"style="margin-top: 10px">
                <div class="panel-body" >
                    <p><strong>Tác giả: </strong>@item.Author</p>
                    <p><strong>Thể loại: </strong>@item.Category.CategoryName</p>
                    <img style="align-self:center;" alt="@item.Title"
                         src="~/Content/ImageBooks/@item.Image" width="125" height="150" />
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right"style="margin-top: 5px">
                        @Html.ActionLink("Xem", "Details", "Book", new { id = item.Id }, new
                        {
                            @class
                        = "btn btn-default"
                        })
                        @Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", "Book", new
                        {
                            id = item.Id
                        }, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>